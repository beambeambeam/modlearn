{
  "name": "modlearn",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "elysia": "^1.4.21",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.18",
      "@trpc/client": "^11.7.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @modlearn/db db:push",
    "db:studio": "turbo -F @modlearn/db db:studio",
    "db:generate": "turbo -F @modlearn/db db:generate",
    "db:migrate": "turbo -F @modlearn/db db:migrate",
    "db:start": "turbo -F @modlearn/db db:start",
    "db:watch": "turbo -F @modlearn/db db:watch",
    "db:stop": "turbo -F @modlearn/db db:stop",
    "db:down": "turbo -F @modlearn/db db:down",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "commit": "git-cz",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@modlearn/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/cz-commitlint": "^20.4.1",
    "@commitlint/types": "^20.4.0",
    "@modlearn/config": "workspace:*",
    "@types/bun": "catalog:",
    "commitizen": "^4.3.1",
    "husky": "latest",
    "lint-staged": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "packageManager": "bun@1.3.5"
}
